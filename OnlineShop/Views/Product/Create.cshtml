@model Product

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tambah Produk Baru</title>
    <style>
        /* Style untuk body */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: darkturquoise;
        }

        /* Style untuk container */
        .container {
            max-width: 600px;
            margin: 20px auto;
            padding: 30px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        /* Style untuk judul */
        h2 {
            text-align: center;
            color: #333;
            margin-bottom: 30px;
        }

        /* Style untuk form */
        form {
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            color: #555;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .form-control-file {
            border: 1px solid #ccc;
            border-radius: 4px;
            padding: 8px;
            box-sizing: border-box;
        }

        .btn {
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            background-color: #007bff;
            color: #fff;
        }

            .btn:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Tambah Produk Baru</h2>

        <form method="post" enctype="multipart/form-data" action="Create">
            <div class="form-group">
                <label for="Name" class="form-label">Nama:</label>
                <input type="text" id="Name" class="form-control" asp-for="Name" />
            </div>
            <div class="form-group">
                <label for="Description" class="form-label">Deskripsi:</label>
                <textarea id="Description" class="form-control" asp-for="Description"></textarea>
            </div>
            <div class="form-group">
                <label for="Price" class="form-label">Harga:</label>
                <input type="number" id="Price" class="form-control" asp-for="Price" />
            </div>
            <div class="form-group">
                <label for="Image" class="form-label">Gambar:</label>
                <input type="file" id="Image" class="form-control-file" name="Image" />
            </div>
            <div class="form-group">
                <label for="Stok" class="form-label">Stok:</label>
                <input type="number" id="Stok" class="form-control" asp-for="Stok" />
            </div>

            <button type="submit" class="btn">Tambah</button>
        </form>
    </div>
</body>
</html>