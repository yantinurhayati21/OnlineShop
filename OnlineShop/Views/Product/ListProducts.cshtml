@model List<Product>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daftar Produk</title>
    <style>
        
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: lightgray;
            
        }

        
        .container {
            max-width: 95%;
            margin: 30px auto;
            padding: 30px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        
        h2 {
            text-align: center;
            color: #333;
            margin-bottom: 30px;
        }

        
        .btn-add {
            
            width: 150px;
            margin: 0 auto;
            text-align: center;
            padding: 10px;
            background-color: #28a745; 
            color: #fff;
            border: none;
            border-radius: 4px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .btn-add:hover {
                background-color: #218838; 
            }

        
        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            .table th,
            .table td {
                padding: 10px;
                border: 1px solid #ddd;
            }

            .table th {
                background-color: #f2f2f2;
                color: #333;
                text-align: left;
            }

        
        .product-image {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 4px;
        }

       
        .btn-edit,
        .btn-delete {
            padding: 6px 12px;
            margin-right: 5px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

        .btn-edit {
            background-color: #007bff; 
            color: #fff;
        }

        .btn-delete {
            background-color: #dc3545; 
            color: #fff;
        }

            .btn-edit:hover,
            .btn-delete:hover {
                background-color: #0056b3; 
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Daftar Produk</h2>

        <a href="/product/Create" class="btn-add">Tambah Produk</a>

        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nama</th>
                    <th>Deskripsi</th>
                    <th>Harga</th>
                    <th>Gambar</th>
                    <th>Stok</th>
                    <th>Keterangan</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.Name</td>
                        <td>@product.Description</td>
                        <td>@product.Price</td>
                        <td><img src="@Url.Content("~/images/" + product.Image)" alt="@product.Name" class="product-image" /></td>
                        <td>@product.Stok</td>
                        <td>
                            <a href="/product/edit/@product.Id" class="btn-edit">Edit</a>
                            <a href="/product/delete/@product.Id" class="btn-delete">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>