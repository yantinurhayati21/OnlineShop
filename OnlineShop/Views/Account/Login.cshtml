<style>
    .card-header {
        text-align: center;
        margin-bottom: 20px;
    }

        .card-header h3 {
            color: #333;
            margin: 0;
        }

    .card-body {
        padding: 0;
    }

    .form-control {
        width: 100%;
        margin: 10px 0;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
    }

    label {
        display: block;
        margin: 10px 0 5px;
        font-weight: bold;
        color: #333;
    }

    .btn-primary {
        width: 100%;
        margin-top: 20px;
        padding: 10px;
        border: none;
        border-radius: 5px;
        background-color: #007bff;
        color: #fff;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .alert {
        width: 100%;
        margin: 10px 0 0;
        padding: 10px;
        border-radius: 5px;
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
        box-sizing: border-box;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border-color: #f5c6cb;
    }
</style>
<body>

    <div class="card">
        <div class="card-header">
            <h3>Login</h3>
        </div>
        <div class="card-body">

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    User tidak ditemukan atau password salah.
                </div>
            }

            <form method="post" action="Login">
                <label for="username">Username</label>
                <input type="text" id="username" name="Username" class="form-control" />

                <label for="password">Password</label>
                <input type="password" id="password" name="Password" class="form-control" />

                <button type="submit" class="btn btn-primary">
                    Login
                </button>
            </form>
        </div>
    </div>
</body>