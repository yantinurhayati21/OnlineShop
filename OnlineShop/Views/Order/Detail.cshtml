﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detail Pesanan</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Style untuk body */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: darkturquoise;
        }

        /* Style untuk container */
        .container {
            max-width: 700px;
            margin: 30px auto;
            padding: 30px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        /* Style untuk judul */
        h2 {
            text-align: center;
            color: #343a40;
            margin-bottom: 30px;
        }

        /* Style untuk form */
        form {
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            color: #555;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ced4da;
            border-radius: 4px;
            box-sizing: border-box;
        }

            .form-control[readonly] {
                background-color: #f5f5f5;
                cursor: not-allowed;
            }

        /* Style untuk tombol kembali */
        .btn-back {
            display: block;
            width: 100%;
            padding: 10px;
            text-align: center;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .btn-back:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        @model OnlineShop.Models.Order

        <h2>Detail Pesanan</h2>

        <form>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="orderId" class="form-label">Order ID:</label>
                        <input type="text" class="form-control" id="orderId" value="@Model.Id" readonly>
                    </div>
                    <div class="form-group">
                        <label for="customerName" class="form-label">Nama Pelanggan:</label>
                        <input type="text" class="form-control" id="customerName" value="@Model.CustomerName" readonly>
                    </div>
                    <div class="form-group">
                        <label for="address" class="form-label">Alamat Pengiriman:</label>
                        <input type="text" class="form-control" id="address" value="@Model.Address" readonly>
                    </div>

                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="status" class="form-label">Status:</label>
                        <input type="text" class="form-control" id="status" value="@Model.Status" readonly>
                    </div>
                    <div class="form-group">
                        <label for="productName" class="form-label">Produk:</label>
                        <input type="text" class="form-control" id="productName" value="@Model.Product.Name" readonly>
                    </div>
                    <div class="form-group">
                        <label for="phoneNumber" class="form-label">Nomor Telepon:</label>
                        <input type="text" class="form-control" id="phoneNumber" value="@Model.PhoneNumber" readonly>
                    </div>

                </div>
                <div class="form-group">
                    <label for="productPrice" class="form-label">Harga:</label>
                    <input type="text" class="form-control" id="productPrice" value="@Model.Product.Price" readonly>
                </div>
                <div class="form-group">
                    <label for="productDescription" class="form-label">Deskripsi:</label>
                    <textarea class="form-control" id="productDescription" rows="3" readonly>@Model.Product.Description</textarea>
                </div>
            </div>
        </form>

        <a href="#" class="btn-back">Kembali</a>
    </div>
</body>
</html>