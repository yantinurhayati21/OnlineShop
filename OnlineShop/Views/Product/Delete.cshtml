@model Product

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Delete Product - OnlineShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<style>
    /* Site-wide CSS */
    body {
        font-family: Arial, sans-serif;
        background-color: lightgray; 
    }

    .container {
        margin-top: 50px; 
        max-width:80%;
    }

    /* Delete Product CSS */
    .delete-product {
        background-color: #fff; 
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); 
        
    }

        .delete-product h2 {
            color: #007bff;
            text-align: center;
        }

        .delete-product p {
            color: #333; 
            margin-bottom: 20px; 
            text-align: center;
        }

    .product-details {
        margin-top: 20px; 
    }

        .product-details h4 {
            color: #555; 
        }

        .product-details dl {
            margin-bottom: 20px; 
        }

        .product-details dt {
            font-weight: bold; 
        }

        .product-details dd {
            margin-left: 0; 
        }

    .form-group {
        margin-top: 20px; 
    }

        .form-group .btn {
            margin-right: 10px; 
        }

</style>
<body>
    <div class="container">
        <div class="delete-product">
            <h2>Delete Product</h2>
            <p>Are you sure you want to delete this product?</p>
            <div class="product-details">
                <h4>Product Details:</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        ID:
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Id
                    </dd>
                    <dt class="col-sm-2">
                        Name:
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Name
                    </dd>
                    <dt class="col-sm-2">
                        Description:
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Description
                    </dd>
                    <dt class="col-sm-2">
                        Price:
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Price
                    </dd>
                    <dt class="col-sm-2">
                        Image:
                    </dt>
                    <dd class="col-sm-10">
                        <img src="@Url.Content("~/images/" + Model.Image)" alt="@Model.Name" width="100" height="100" />
                    </dd>
                    <dt class="col-sm-2">
                        Stock:
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Stok
                    </dd>
                </dl>
            </div>

            <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>